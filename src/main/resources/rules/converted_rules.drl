package rules;

import com.radicu.ruleengine.model.Variable;

rule "R009"
    salience 50
when
    $fact : Variable(ph > 1500 && sf < 1000 && xTableCurrentMax > 6 && yTableCurrentMax > 6)
then
    $fact.setState("Drilling Big Hole");
end

rule "R008"
    salience 50
when
    $fact : Variable((sf < 1000 || bwo < 300) && xTableCurrentMax > 6 && yTableCurrentMax > 6)
then
    $fact.setState("Warm Up");
end

rule "R007"
    salience 2
when
    $fact : Variable(ncs > 1000 && (sf < 1000 || bwo < 300) && xTableCurrentMax > 6 && yTableCurrentMax > 6)
then
    $fact.setState("Change Bits");
end

rule "R006"
    salience 50
when
    $fact : Variable((sf < 1000 || bwo < 300) && ph < 1000)
then
    $fact.setState("Spindle idle");
end

rule "R005"
    salience 50
when
    $fact : Variable((sf > 1000 || bwo > 300) && ph < 1500 && xTableCurrentMax > 6 && yTableCurrentMax > 6)
then
    $fact.setState("Drilling Small");
end

